alias :q='exit'
alias :c='clear'

alias shitdown='sudo shutdown 0 -h'

alias l='ls -C1Fc --group-directories-first'
alias ll='ls -gGX --group-directories-first'
alias la='ls -AgGX --group-directories-first'
alias sl='sl -ace'
alias ..='cd ..'

alias color-g++='colorgcc -lstdc++ -std=c++11 -Wall'
alias open-filemanager='xdg-open ./ & '
alias dsize='du -hsx * | sort -rh'

alias bc='bc -l'
alias cowsay='cowsay -f elephant-in-snake.cow'
alias calendar='calendar -A 5'
